generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int               @id @default(autoincrement())
  display_name  String
  gender        String
  created_at    DateTime          @default(now())
  chat_sessions UserChatSession[]
  messages      Message[]
}

model Message {
  id              Int          @id @default(autoincrement())
  content         String       @db.LongText
  created_at      DateTime     @default(now())
  sender_id       Int          @unique
  chat_session_id Int?
  sender          User         @relation(fields: [sender_id], references: [id])
  ChatSession     ChatSession? @relation(fields: [chat_session_id], references: [id])
}

model UserChatSession {
  id              Int         @id @default(autoincrement())
  user_id         Int
  chat_session_id Int
  user            User        @relation(fields: [user_id], references: [id])
  chat_session    ChatSession @relation(fields: [chat_session_id], references: [id])
}

model ChatSession {
  id         Int               @id @default(autoincrement())
  created_at DateTime
  ended_at   DateTime?
  is_active  Boolean           @default(true)
  users      UserChatSession[]
  messages   Message[]
}
